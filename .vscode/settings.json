{
  "terminal.integrated.env.osx": {
    "PATH": "/Library/TeX/texbin:${env:PATH}"
  },
  "files.watcherExclude": {
    "**/output/**": true
  },

  // 只使用 Skim 外部查看器（禁用内置标签页）
  "latex-workshop.view.pdf.viewer": "external",

  // 使用 Skim 的 displayline，支持 SyncTeX 正/反向搜索
  "latex-workshop.view.pdf.external.viewer.command": "/Applications/Skim.app/Contents/SharedSupport/displayline",
  "latex-workshop.view.pdf.external.viewer.args": ["-g", "%LINE%", "%PDF%", "%TEX%"],

  // 引用/跳转也走外部查看器
  "latex-workshop.view.pdf.ref.viewer": "external",

  // 构建后不要打开内置 PDF 标签
  "latex-workshop.view.pdf.tab.openAfterBuild": false,

  // 输出目录与清理策略
  "latex-workshop.latex.outDir": "output",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux","*.bbl","*.bcf","*.blg","*.log","*.out","*.toc",
    "*.run.xml","*.synctex.gz","*.fdb_latexmk","*.fls","*.xdv",
    "*.nav","*.snm","*.vrb"
  ],

  // 质量优化（可选）
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.view.pdf.zoom": "auto"
}