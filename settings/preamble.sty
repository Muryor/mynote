% =========================
% 统一表格环境
% =========================
% examtable：无竖线的 booktabs 风格（用于讲义）
\newenvironment{examtable}[1]
  {\begin{center}\small
   \setlength{\tabcolsep}{6pt}
   \renewcommand{\arraystretch}{1.2}
   \begin{tabular}{#1}
   \toprule}
  {\bottomrule
   \end{tabular}
   \end{center}}

% examtableboxed：带竖线的框线表格（用于试卷）
\newenvironment{examtableboxed}[1]
  {\begin{center}\small
   \setlength{\tabcolsep}{6pt}% 列间距
   \renewcommand{\arraystretch}{1.2}% 行距
   \begin{tabular}{|#1|}
   \hline}
  {\hline
   \end{tabular}
   \end{center}}

