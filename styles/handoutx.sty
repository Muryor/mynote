% styles/handoutx.sty  (new)
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{styles/handoutx}[2025/10/30 v0.1 Handout boxes]
\RequirePackage{tcolorbox}
\tcbuselibrary{skins,breakable,theorems}

% Palette (close to the screenshots: green accent)
\definecolor{HMain}{RGB}{40,140,90}   % main green
\definecolor{HBack}{RGB}{245,251,247} % light background

\tcbset{
  handoutbox/.style={
    enhanced, breakable,
    colback=HBack, colframe=HMain,
    boxrule=0.6pt, arc=2mm,
    left=6pt, right=6pt, top=5pt, bottom=5pt
  }
}

% Definition-like
\newtcbtheorem[number within=chapter]{definitionx}{定义}{
  handoutbox, fonttitle=\bfseries, coltitle=HMain}{def}

% Property / fact
\newtcbtheorem[number within=chapter]{propertyx}{性质}{
  handoutbox, fonttitle=\bfseries, coltitle=HMain}{prop}

% Example
\newtcbtheorem[number within=chapter]{examplex}{例题}{
  handoutbox, fonttitle=\bfseries, coltitle=HMain}{ex}

% Note
\newtcbtheorem[]{notebox}{注意}{
  handoutbox, fonttitle=\bfseries, coltitle=HMain}{note}
